import streamlit as st

st.set_page_config(
    page_title="Favorites - C.L.O.A.K.fit",
    page_icon="ğŸ‘”",
    layout="wide"
)

st.title("Your Favorites")

if st.session_state.favorites:
    cols = st.columns(3)
    for idx, img_url in enumerate(st.session_state.favorites):
        with cols[idx % 3]:
            st.image(img_url, use_column_width=True)
            if st.button(f"Remove", key=f"remove_{idx}"):
                st.session_state.favorites.remove(img_url)
                st.rerun()
else:
    st.write("No favorites yet. Go browse some inspiration!")

st.write("")
st.write("")

col1, col2 = st.columns([1, 1])
with col1:
    if st.button("â† Back to Inspiration", use_container_width=True):
        st.switch_page("pages/3_Inspiration.py")
with col2:
    if st.button("Start Over", use_container_width=True):
        st.switch_page("main.py")
